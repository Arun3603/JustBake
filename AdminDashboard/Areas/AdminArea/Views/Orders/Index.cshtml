                                <th>Order Id</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input class="form-check-input" type="checkbox" id="gridCheck"></td>
                                <td>Tiger Nixon</td>
                                <td>985632147</td>
                                <td>Edinburgh</td>
                                <td><span class="badge bg-success">Paid</span></td>
                                <td> 435</td>
                                <td id="copyText">Bangalore  <i class="bx bx-clipboard" style="cursor: pointer; float:right;"></i></td>
                                <td>XY1455425</td>
                                <td><a href="#" title="delete"><i class="text-primary" data-feather="eye"></i></a></td>
                            </tr>


                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
        $(document).ready(function () {
            debugger;
            $('.sts').hide();

            $('.stsbtn').hide();
            $("#gridCheck").change(function () {
                if ($(this).is(":checked")) {
                    $('.sts').show();
                    $('.stsbtn').show();
                } else {
                    $('.sts').hide();
                    $('.stsbtn').hide();
                }
            });

        });
</script>
<script>
    const copyText = document.getElementById('copyText');
    copyText.addEventListener('click', async () => {
        const textToCopy = copyText.textContent;

        try {
            await navigator.clipboard.writeText(textToCopy);

        } catch (err) {
            console.error('Failed to copy text: ', err);
        }
    });
</script>