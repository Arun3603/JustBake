        </div>
    </div>


    <hr />

    <div class="card">
        <div class="card-body">
            <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap5">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Product</th>
                                <th>Status</th>
                                <th>Amount</th>
